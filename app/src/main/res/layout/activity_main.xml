        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/activity_main_to_basic_btn_3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
